# TargetVision Docker Environment Configuration Template
# Copy this file to .env and update with your actual values

# === Environment ===
ENVIRONMENT=development
LOG_LEVEL=info

# === Database Configuration ===
POSTGRES_DB=targetvision
POSTGRES_USER=targetvision
POSTGRES_PASSWORD=changeme_secure_password
DB_PORT=5432

# === Application Ports ===
BACKEND_PORT=8000
FRONTEND_PORT=3000
REDIS_PORT=6379

# === API Keys ===
# Anthropic Claude API Key for AI processing
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# OpenAI API Key for embeddings (optional)
OPENAI_API_KEY=your_openai_api_key_here

# === SmugMug OAuth Configuration ===
SMUGMUG_API_KEY=your_smugmug_api_key_here
SMUGMUG_API_SECRET=your_smugmug_api_secret_here
SMUGMUG_CALLBACK_URL=http://localhost:3000/callback

# === CORS Configuration ===
# Comma-separated list of allowed origins
CORS_ORIGINS=http://localhost:3000,http://localhost

# === Redis Configuration (Optional) ===
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0

# === Application Settings ===
# Maximum file upload size in MB
MAX_UPLOAD_SIZE=100

# Batch processing settings
BATCH_SIZE=10
PROCESSING_TIMEOUT=300

# === Security ===
# JWT Secret for authentication (generate a secure random string)
JWT_SECRET=your_secure_jwt_secret_here

# Session timeout in minutes
SESSION_TIMEOUT=60

# === Feature Flags ===
ENABLE_REDIS_CACHE=true
ENABLE_BACKGROUND_PROCESSING=true
ENABLE_DEBUG_LOGGING=false

# === Performance ===
# Database connection pool settings
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=40

# Worker settings for async processing
WORKER_CONCURRENCY=4

# === Monitoring (Optional) ===
# Sentry DSN for error tracking
SENTRY_DSN=

# Prometheus metrics endpoint
ENABLE_METRICS=false
METRICS_PORT=9090